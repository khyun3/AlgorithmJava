public class solution {
	public static void main(String [] args)throws Exception{
		Scanner sc = new Scanner(System.in);	
		int T = sc.nextInt();
		int res;
		for (int t = 1; t <= T; t++) {
			int N = sc.nextInt();
			res = 0;
			for(int i=1; i<=N; i++) {
				if(i%2 == 0)
					res-=i;
				else
					res+=i;
			}
			System.out.println("#"+t+" "+res);
		}	
	}
}